<%= form_tag home_notify_path do %>
  <table>
    <tr>
      <td> Subject </td>
      <td><%= text_area_tag :subject, '', style: "width: 500px;" %></td>
    </tr>

    <tr>
      <td> Emails </td>
      <td><%= text_area_tag :emails, '', style: "width: 500px; height: 150px;" %></td>
    </tr>

    <tr>
      <td> Content </td>
      <td><%= text_area_tag :content, '', style: "width: 500px; height: 300px;" %></td>
    </tr>

    <tr>
      <td><%= submit_tag 'Submit'%></td>
    </tr>
  </table>
<% end %>